# Is-Siggiewi End of Year Race - Production Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL="mysql://username:password@host:port/database?ssl=true"

# ============================================
# DOMAIN CONFIGURATION
# ============================================
VITE_APP_URL="https://siggiewiendofyearrace.com"

# ============================================
# APP BRANDING
# ============================================
VITE_APP_TITLE="Is-Siggiewi End of Year Race"
VITE_APP_LOGO="/council-logo.png"

# ============================================
# STRIPE PAYMENT INTEGRATION
# ============================================
# Get your keys from: https://dashboard.stripe.com/apikeys
# IMPORTANT: Use LIVE keys for production, not test keys
STRIPE_SECRET_KEY="sk_live_..."
VITE_STRIPE_PUBLISHABLE_KEY="pk_live_..."

# ============================================
# FORMSPREE EMAIL NOTIFICATIONS
# ============================================
# Get your form ID from: https://formspree.io
FORMSPREE_FORM_ID="your_form_id_here"

# ============================================
# SECURITY
# ============================================
# Generate a secure random string (64+ characters)
# You can use: openssl rand -hex 32
JWT_SECRET="your_secure_random_string_here"

# ============================================
# OAUTH AUTHENTICATION (Optional - Manus Platform)
# ============================================
# If using Manus OAuth, keep these values
# Otherwise, implement your own authentication system
OAUTH_SERVER_URL="https://api.manus.im"
VITE_OAUTH_PORTAL_URL="https://auth.manus.im"
VITE_APP_ID="your_app_id"
OWNER_OPEN_ID="admin_user_open_id"
OWNER_NAME="Admin Name"

# ============================================
# S3 STORAGE (For GPX files, photos, etc.)
# ============================================
# AWS S3 or compatible service (e.g., DigitalOcean Spaces, Cloudflare R2)
S3_ENDPOINT="https://s3.amazonaws.com"
S3_REGION="us-east-1"
S3_BUCKET="your-bucket-name"
S3_ACCESS_KEY_ID="your_access_key_id"
S3_SECRET_ACCESS_KEY="your_secret_access_key"

# ============================================
# ANALYTICS (Optional)
# ============================================
VITE_ANALYTICS_WEBSITE_ID="your_analytics_id"
VITE_ANALYTICS_ENDPOINT="https://your-analytics-endpoint.com"

# ============================================
# FORGE API (Optional - Manus Platform)
# ============================================
BUILT_IN_FORGE_API_URL="https://api.manus.im"
BUILT_IN_FORGE_API_KEY="your_forge_api_key"
VITE_FRONTEND_FORGE_API_URL="https://api.manus.im"
VITE_FRONTEND_FORGE_API_KEY="your_frontend_forge_key"

